html
  min-height 100%

*
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)  
  -webkit-font-smoothing antialiased
  font-smoothing antialiased
  box-sizing border-box

body
  height 100%
  overflow-y auto
  overflow-x hidden
  margin 0
  
.hidden
	display none
	opacity 0
 
 
.Logo {
  width: 5rem
  height: 2.5rem
  background: url("../_img/rest_logo_outline.svg") no-repeat
  display: block
  background-size: 100%
  z-index: 9996
  transition: none
  float: left
  text-indent: -9999rem
  cursor pointer
  position: absolute;
  top: unit4;
  left: unit4;
}
